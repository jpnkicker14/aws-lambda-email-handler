{
  "name": "aws-lambda-ses-mailer",
  "version": "1.0.3",
  "description": "Reusable AWS Lambda email handler with SES and reCAPTCHA verification",
  "type": "module",
  "main": "./dist/sendMailHandler.js",
  "types": "./dist/sendMailHandler.d.ts",
  "exports": {
    ".": {
      "import": "./dist/sendMailHandler.js",
      "require": "./dist/sendMailHandler.cjs"
    }
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.700.0",
    "ajv": "^8.17.0",
    "ajv-formats": "^3.0.1",
    "ajv-keywords": "^5.1.0",
    "busboy": "^1.6.0",
    "nodemailer": "^6.9.13"
  },
  "devDependencies": {
    "@types/busboy": "^1.5.0",
    "@types/aws-lambda": "^8.10.145",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.14.9",
    "@types/nodemailer": "^6.4.12",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.6.3"
  }
}